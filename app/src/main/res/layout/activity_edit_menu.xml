<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.awj.ma63amiapp_admin.EditMenu"
    android:background="#000000"
    android:clickable="true">



    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/AdminmenueditItem"
        android:src="@drawable/additem"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/AdminprogressBar"
        android:layout_alignStart="@+id/AdminprogressBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:id="@+id/AdmintextView12"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_alignLeft="@+id/AdminmenueditItem"
        android:layout_alignStart="@+id/AdminmenueditItem"
        android:layout_below="@+id/AdminmenueditItem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Item"
        android:id="@+id/textView15"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/AdminItemsList"
        android:layout_alignRight="@+id/AdminmenueditItem"
        android:layout_alignEnd="@+id/AdminmenueditItem" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/AdminItemsList"
        android:background="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/AdmintextView12" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AdminprogressBar"
        android:indeterminate="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/AdminEditinfoback"
        android:src="@drawable/simpleback2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
