<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.awj.ma63amiapp_admin.Payments"
    android:background="#000000">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Payments"
        android:id="@+id/AdminPaymentstextView12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Payment #1"
        android:id="@+id/AdminPaymentstextView13"
        android:layout_below="@+id/AdminPaymentstextView12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Payment #2"
        android:id="@+id/AdminPaymentstextView16"
        android:layout_marginTop="80dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/AdminPaymentstextView13"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Payment #3"
        android:id="@+id/AdminPaymentstextView17"
        android:layout_marginTop="80dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/AdminPaymentstextView16"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Payment #4"
        android:id="@+id/AdminPaymentstextView18"
        android:textColor="#ffffff"
        android:layout_below="@+id/AdminPaymentstextView17"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/AdminPaymentsimageView8"
        android:layout_alignTop="@+id/AdminPaymentstextView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/simpleback2" />

</RelativeLayout>
