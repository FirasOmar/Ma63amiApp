<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.awj.ma63amiapp_admin.editItem"
    android:background="#ffffff"
    android:id="@+id/editItem">

    <TextView
        android:text="Edit Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AdminaddItemText"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/Admincategoryadd"
        android:background="#ff187bf5"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/AdminaddItemText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:popupBackground="#ff187bf5"
        />

    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AdmintextView16"
        android:textSize="20sp"
        android:textColor="#00008b"
        android:layout_below="@+id/Admincategoryadd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:text="Price:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AdmintextView17"
        android:textSize="20sp"
        android:textColor="#00008b"
        android:layout_below="@+id/AdmintextView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:text="Discription:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AdmintextView18"
        android:textSize="20sp"
        android:textColor="#00008b"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/AdmintextView17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:id="@+id/AdminEditeditText"
        android:layout_alignTop="@+id/AdmintextView16"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ff187bf5"
        android:autoText="true"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:id="@+id/AdminEditeditText2"
        android:layout_alignTop="@+id/AdmintextView17"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ff187bf5"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:id="@+id/AdminEdititemDescription"
        android:layout_alignTop="@+id/AdmintextView18"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ff187bf5"
        android:autoText="true"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Edit"
        android:id="@+id/AdminEditbutton2"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_blue"
        android:textColor="#ffffff"
        android:layout_below="@+id/AdminEdititemDescription"
        android:layout_toLeftOf="@+id/AdminEdititemDescription"
        android:layout_toStartOf="@+id/AdminEdititemDescription" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar3"
        android:layout_above="@+id/AdminEdititemDescription"
        android:layout_centerHorizontal="true"
        android:indeterminate="false"
        android:visibility="invisible"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Delete"
        android:id="@+id/AdminEditbutton8"
        android:background="@drawable/button_blue"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/AdminEditbutton2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp" />

    <TextView
        android:text="Category:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AdmintextView74"
        android:textSize="20sp"
        android:textColor="#00008b"
        android:layout_alignTop="@+id/Admincategoryadd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/Admincategoryadd"
        android:gravity="center" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/AdminEditimageView8"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/simpleback" />

</RelativeLayout>
