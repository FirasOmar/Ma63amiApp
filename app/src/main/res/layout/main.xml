<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose the country please"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/r1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Palestine"
                    android:layout_marginTop="20dp"
                    android:id="@+id/txt1" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:id="@+id/palestine"
                    android:src="@drawable/palestine"
                    android:layout_column="1"
                    android:onClick="palestine_onclick"
                    android:layout_marginLeft="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:id="@+id/r2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Jordan"
                    android:layout_marginTop="20dp"
                    android:id="@+id/txt2" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:id="@+id/jordan"
                    android:src="@drawable/jordan"
                    android:layout_column="1"
                    android:layout_marginLeft="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Lebanon"
                    android:layout_marginTop="20dp" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:id="@+id/lebanon"
                    android:src="@drawable/lebanon"
                    android:layout_column="1"
                    android:layout_marginLeft="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Qatar"
                    android:layout_marginTop="20dp" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:id="@+id/qatar"
                    android:src="@drawable/qatar"
                    android:layout_column="1"
                    android:layout_marginLeft="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Syria"
                    android:layout_marginTop="20dp" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:id="@+id/syria"
                    android:src="@drawable/syria"
                    android:layout_column="1"
                    android:layout_marginLeft="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Iraq"
                    android:layout_marginTop="20dp" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:id="@+id/iraq"
                    android:src="@drawable/iraq"
                    android:layout_column="1"
                    android:layout_marginLeft="20dp" />
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>
