<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.awj.ma63amiapp_admin.additems"
    android:background="#000000"
    android:clickable="true"
    android:id="@+id/add">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Item"
        android:id="@+id/AdmintextView13"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="32sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Category:"
        android:id="@+id/AdmintextView57"
        android:layout_below="@+id/AdmintextView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <Spinner
        android:popupBackground="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Adminspinner"
        android:spinnerMode="dropdown"
        android:background="#DAA520"
        android:clickable="true"
        android:layout_alignTop="@+id/AdmintextView57"
        android:layout_alignLeft="@+id/AdmintextView13"
        android:drawSelectorOnTop="true"
        android:layout_alignStart="@+id/AdmintextView13"

        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name:"
        android:id="@+id/AdmintextView58"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:layout_below="@+id/Adminspinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/AdmineditText3"
        android:layout_alignTop="@+id/AdmintextView58"
        android:background="#DAA520"
        android:layout_alignBottom="@+id/AdmintextView58"
        android:layout_toRightOf="@+id/AdmintextView60"
        android:layout_toEndOf="@+id/AdmintextView60" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price:"
        android:id="@+id/AdmintextView59"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/AdmintextView58"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/AdmineditText15"
        android:background="#DAA520"
        android:layout_alignTop="@+id/AdmintextView59"
        android:layout_alignLeft="@+id/AdmineditText3"
        android:layout_alignStart="@+id/AdmineditText3"
        android:layout_alignBottom="@+id/AdmintextView59" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description:"
        android:id="@+id/AdmintextView60"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/AdmintextView59"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/AdmineditText16"
        android:background="#DAA520"
        android:layout_alignTop="@+id/AdmintextView60"
        android:layout_alignRight="@+id/AdmineditText15"
        android:layout_alignEnd="@+id/AdmineditText15"
        android:layout_alignBottom="@+id/AdmintextView60" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Add"
        android:id="@+id/Adminbutton"
        android:layout_marginTop="42dp"
        android:background="@drawable/goldb1"
        android:layout_below="@+id/AdmineditText16"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/AdminimageView8"
        android:layout_alignTop="@+id/AdmintextView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/simpleback2" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AdminprogressBar2"
        android:layout_above="@+id/AdmineditText15"
        android:layout_centerHorizontal="true"
        android:indeterminate="false" />

</RelativeLayout>
